<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.devmel.apps.serialterminal.UserProfiling">


    <TextView
        android:text="User Statistics"
        android:layout_height="wrap_content"
        android:id="@+id/textView_avg1"
        android:textSize="18sp"
        android:layout_width="351dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="51dp"
        android:background="#FF1CAC9C"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_width="wrap_content"
        android:layout_below="@+id/textView_avg1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="41dp"
        android:layout_alignRight="@+id/textView_avg1"
        android:layout_alignEnd="@+id/textView_avg1">


        <TextView
            android:text="TextView"
            android:layout_height="wrap_content"
            android:id="@+id/textView_avg1"
            android:textSize="18sp"
            android:layout_width="351dp" />

        <TextView
            android:text="TextView"
            android:layout_height="wrap_content"
            android:id="@+id/textView_avg2"
            android:textSize="18sp"
            android:layout_width="match_parent" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_avg3"
            android:textSize="18sp" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_avg4"
            android:textSize="18sp" />
    </LinearLayout>




</RelativeLayout>
